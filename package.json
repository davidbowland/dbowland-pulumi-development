{
  "name": "dbowland-pulumi-development",
  "version": "1.0.0",
  "private": true,
  "description": "dbowland.com development infrastructure",
  "author": "David Bowland",
  "engines": {
    "node": "^16.0.0"
  },
  "scripts": {
    "deploy": "./deploy.sh",
    "preview": "./preview.sh",
    "lint": "prettier --write . && eslint --fix .",
    "workflow:push": "act push -s AWS_ACCESS_KEY_ID -s AWS_SECRET_ACCESS_KEY -s AWS_REGION -s GITHUB_TOKEN",
    "workflow:pull_request": "act pull_request -s AWS_ACCESS_KEY_ID -s AWS_SECRET_ACCESS_KEY -s AWS_REGION -s GITHUB_TOKEN"
  },
  "dependencies": {
    "@pulumi/aws": "^4.0.0",
    "@pulumi/awsx": "^0.30.0",
    "@pulumi/pulumi": "^3.0.0",
    "@types/node": "^15.3.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^4.3.8",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "eslint --fix ."
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "prettier --write --ignore-unknown",
      "eslint --fix"
    ],
    "**/*": [
      "prettier --write --ignore-unknown"
    ]
  }
}
