    "update": "ncu --target minor --upgrade && npm audit fix --audit-level=none && npm dedupe"
  },
  "dependencies": {},
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^13.3.0",
    "prettier": "^2.8.8"
